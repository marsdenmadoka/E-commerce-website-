<!DOCTYPE html>
<html>
    <head>
        <title>The Generics</title>
        <meta name="description" content="This is the description">
        <link rel="stylesheet" href="styles.css" />

         
             <script src="index.js"></script>
    </head>
    <body>
        <header class="main-header">
            <nav class="nav main-nav">
                <ul>
                    <li><a href="/">HOME</a></li>
                    <li><a href="/store">STORE</a></li>
                    <li><a href="about.html">ABOUT</a></li>
                </ul>
            </nav>
            <h1 class="band-name band-name-large">The Generics</h1>
            <div class="container">
                <button type="button" class="btn btn-header">Get our Latest Album</button>
            </div>
            <button type="button" class="btn btn-header btn-play">&#9658;</button>
        </header>
        <section class="content-section container">
            <h2 class="section-header">TOURS</h2>
            <div>
                    <% items.TOURS.forEach(function(item){ %>
                <div class="tour-row">   
                     <div class="tour-item" data-item-id="<%=item.id%>">  
                    <span class="tour-item tour-date"><%=item.date%></span>
                    <span class="tour-item tour-city"><b><%=item.city%></b></span>
                    <span class="tour-item tour-arena"><i><b><%=item.arena%></i></b></span>
                    <span class="tour-item tour-price">$<%=item.price%></span>
                    <button type="button" class="btn btn-primary tour-item-button">ADD TO CART</button>
                    
                </div>
                </div>
                <%})%>
            
            </div>
        </section>

        <section class="container content-section">
            <h2 class="section-header">CART</h2>
            <div class="cart-row">
                <span class="cart-item cart-header cart-column">CITY</span>
                <span class="cart-date cart-header cart-column">DATE</span>
                <span class="cart-arena cart-header cart-column">ARENA</span>
                <span class="cart-price cart-header cart-column">PRICE</span>
            </div>
            <div class="cart-items">
            </div>
            <div class="cart-total">
                <strong class="cart-total-title">Total</strong>
                <span class="cart-total-price">$0</span>
            </div>
            <button class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
        </section>

        <footer class="main-footer">
            <div class="container main-footer-container">
                <h3 class="band-name">The Generics</h3>
                <ul class="nav footer-nav">
                    <li>
                        <a href="https://www.youtube.com" target="_blank">
                            <img src="Images/YouTube Logo.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.spotify.com" target="_blank">
                            <img src="Images/Spotify Logo.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com" target="_blank">
                            <img src="Images/Facebook Logo.png">
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
    </body>
</html>